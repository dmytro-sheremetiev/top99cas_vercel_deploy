{
  "builds": [
    {
      "src": "server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ]
}
